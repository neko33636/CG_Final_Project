<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<AnchorPane fx:id="anchorPane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cgvsu.GuiController">

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Load Model" onAction="#onOpenModelMenuItemClick"/>
        </Menu>
    </MenuBar>

    <Canvas fx:id="canvas"
            AnchorPane.topAnchor="30"
            AnchorPane.leftAnchor="260"
            AnchorPane.rightAnchor="0"
            AnchorPane.bottomAnchor="0"/>

    <VBox spacing="8"
          prefWidth="260"
          AnchorPane.topAnchor="30"
          AnchorPane.leftAnchor="0"
          AnchorPane.bottomAnchor="0"
          style="-fx-padding:10; -fx-background-color:#f0f0f0;">

        <Label text="Models"/>
        <VBox fx:id="modelListVBox" spacing="5"/>

        <Label text="Translation"/>
        <HBox spacing="5"><Label text="X"/><Button fx:id="translateXMinusBtn" text="-" onAction="#onTranslateXMinus"/><TextField fx:id="txField"/><Button fx:id="translateXPlusBtn" text="+" onAction="#onTranslateXPlus"/></HBox>
        <HBox spacing="5"><Label text="Y"/><Button fx:id="translateYMinusBtn" text="-" onAction="#onTranslateYMinus"/><TextField fx:id="tyField"/><Button fx:id="translateYPlusBtn" text="+" onAction="#onTranslateYPlus"/></HBox>
        <HBox spacing="5"><Label text="Z"/><Button fx:id="translateZMinusBtn" text="-" onAction="#onTranslateZMinus"/><TextField fx:id="tzField"/><Button fx:id="translateZPlusBtn" text="+" onAction="#onTranslateZPlus"/></HBox>

        <Label text="Rotation"/>
        <HBox spacing="5"><Label text="X"/><Button fx:id="rotateXMinusBtn" text="-" onAction="#onRotateXMinus"/><TextField fx:id="rxField"/><Button fx:id="rotateXPlusBtn" text="+" onAction="#onRotateXPlus"/></HBox>
        <HBox spacing="5"><Label text="Y"/><Button fx:id="rotateYMinusBtn" text="-" onAction="#onRotateYMinus"/><TextField fx:id="ryField"/><Button fx:id="rotateYPlusBtn" text="+" onAction="#onRotateYPlus"/></HBox>
        <HBox spacing="5"><Label text="Z"/><Button fx:id="rotateZMinusBtn" text="-" onAction="#onRotateZMinus"/><TextField fx:id="rzField"/><Button fx:id="rotateZPlusBtn" text="+" onAction="#onRotateZPlus"/></HBox>

        <Label text="Scale"/>
        <HBox spacing="5"><Label text="X"/><Button fx:id="scaleXMinusBtn" text="-" onAction="#onScaleXMinus"/><TextField fx:id="sxField"/><Button fx:id="scaleXPlusBtn" text="+" onAction="#onScaleXPlus"/></HBox>
        <HBox spacing="5"><Label text="Y"/><Button fx:id="scaleYMinusBtn" text="-" onAction="#onScaleYMinus"/><TextField fx:id="syField"/><Button fx:id="scaleYPlusBtn" text="+" onAction="#onScaleYPlus"/></HBox>
        <HBox spacing="5"><Label text="Z"/><Button fx:id="scaleZMinusBtn" text="-" onAction="#onScaleZMinus"/><TextField fx:id="szField"/><Button fx:id="scaleZPlusBtn" text="+" onAction="#onScaleZPlus"/></HBox>

        <HBox spacing="5">
            <Button fx:id="resetTransformButton" text="Reset Active" onAction="#onResetTransformButtonClick"/>
            <Button fx:id="resetAllTransformsButton" text="Reset All" onAction="#onResetAllTransformsButtonClick"/>
            <Button fx:id="saveModelButton" text="Save Active Model" onAction="#onSaveModel"/>
        </HBox>

        <Separator/>

        <Label text="Delete vertices"/>
        <HBox spacing="5">
            <TextField fx:id="vertexIndicesField"/>
            <Button fx:id="deleteVertexBtn" text="Delete" onAction="#onDeleteVertices"/>
        </HBox>

        <Label text="Delete polygons"/>
        <HBox spacing="5">
            <TextField fx:id="polygonIndicesField"/>
            <Button fx:id="deletePolygonBtn" text="Delete" onAction="#onDeletePolygons"/>
        </HBox>

        <CheckBox fx:id="deleteFreeVerticesCheckBox" text="Delete free vertices"/>

    </VBox>
</AnchorPane>
