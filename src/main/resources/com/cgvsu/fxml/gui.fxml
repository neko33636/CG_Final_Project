<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<AnchorPane fx:id="anchorPane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cgvsu.GuiController">

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Load Model" onAction="#onOpenModelMenuItemClick"/>
        </Menu>
    </MenuBar>

    <Canvas fx:id="canvas"
            AnchorPane.topAnchor="30"
            AnchorPane.leftAnchor="300"
            AnchorPane.rightAnchor="0"
            AnchorPane.bottomAnchor="0"/>

    <VBox spacing="8"
          prefWidth="300"
          AnchorPane.topAnchor="30"
          AnchorPane.leftAnchor="0"
          AnchorPane.bottomAnchor="0"
          style="-fx-padding:10; -fx-background-color:#f0f0f0;">

        <Label text="Models"/>
        <VBox fx:id="modelListVBox" spacing="5"/>

        <Label text="Translation"/>
        <HBox spacing="5">
            <Label text="X"/>
            <TextField fx:id="txField"/>
            <Label text="Y"/>
            <TextField fx:id="tyField"/>
            <Label text="Z"/>
            <TextField fx:id="tzField"/>
        </HBox>
        <Button fx:id="applyTranslationBtn" text="Apply Translation" onAction="#onApplyTranslation"/>

        <Label text="Rotation"/>
        <HBox spacing="5">
            <Label text="X"/>
            <TextField fx:id="rxField"/>
            <Label text="Y"/>
            <TextField fx:id="ryField"/>
            <Label text="Z"/>
            <TextField fx:id="rzField"/>
        </HBox>
        <Button fx:id="applyRotationBtn" text="Apply Rotation" onAction="#onApplyRotation"/>

        <Label text="Scale"/>
        <HBox spacing="5">
            <Label text="X"/>
            <TextField fx:id="sxField"/>
            <Label text="Y"/>
            <TextField fx:id="syField"/>
            <Label text="Z"/>
            <TextField fx:id="szField"/>
        </HBox>
        <Button fx:id="applyScaleBtn" text="Apply Scale" onAction="#onApplyScale"/>

        <HBox spacing="5">
            <Button fx:id="resetTransformButton" text="Reset Active" onAction="#onResetTransformButtonClick"/>
            <Button fx:id="resetAllTransformsButton" text="Reset All" onAction="#onResetAllTransformsButtonClick"/>
            <Button fx:id="saveModelButton" text="Save Active Model" onAction="#onSaveModel"/>
        </HBox>

        <Separator/>

        <Label text="Delete vertices"/>
        <HBox spacing="5">
            <TextField fx:id="vertexIndicesField"/>
            <Button fx:id="deleteVertexBtn" text="Delete" onAction="#onDeleteVertices"/>
        </HBox>

        <Label text="Delete polygons"/>
        <HBox spacing="5">
            <TextField fx:id="polygonIndicesField"/>
            <Button fx:id="deletePolygonBtn" text="Delete" onAction="#onDeletePolygons"/>
        </HBox>

        <CheckBox fx:id="deleteFreeVerticesCheckBox" text="Delete free vertices"/>

    </VBox>
</AnchorPane>
